<!-- category section -->

<div class="container">
	<% info.forEach(function (user) { %>
         
         <div class="row">
         	<div class="col-sm-4">
         		<img src="<%= user.image %>" style="width: 100%;">
         	</div>
         	<div class="col-sm-8">
