		</div>
	</div>
</div>
<!-- end footer section -->

<script src="http://code.jquery.com/jquery-1.11.2.min.js"></script>
<script src="/static/js/menuFullpage.min.js"></script>
<script>
        smoothScroll.init();
        $(document).ready(function() {
                $('.menu-point').menuFullpage({
                	menu:"#menu",
					push:".push",

					side:"left",

					menuWidth:"40%",

					speed:"600",

					activeBtn:"menu-open"

                });

                $('.menu-point1').menuFullpage({
                	menu:"#menu1",
					push:".push",

					side:"left",

					menuWidth:"100%",

					speed:"600",

					activeBtn:"menu-open"

                });
        });

        $(document).ready(function(){


        	// get category for menu
        	$.ajax({
			  method: "GET",
			  url: "/admin/getcategory",
			  dataType: "json",
			  success: function(data)
			  {
			  	console.log(data);
			  	$("#menu ul").html = "";
			  	data.forEach(function(item){
			  		let li_element = "<li><a data-scroll href='/category/"+ item.id +"'>"+ item.category_name +"</a></li>";
			  		$("#menu ul").append(li_element);
			  	});
			  },
			  error: function(error){
			  	console.log(error);
			  }
			});
        });

</script>

</body>
</html>


















